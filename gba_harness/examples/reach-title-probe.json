{
  "host": "127.0.0.1",
  "port": 61337,
  "timeoutMs": 45000,
  "steps": [
    {
      "action": "ping",
      "note": "Verify bridge connectivity"
    },
    {
      "action": "reset",
      "note": "Start from a known boot state"
    },
    {
      "action": "advance",
      "frames": 300,
      "button": "A",
      "note": "Hold A through initial logo timing"
    },
    {
      "action": "screenshot",
      "path": "./outputs/probe-01.png",
      "note": "Checkpoint 1"
    },
    {
      "action": "advance",
      "frames": 420,
      "button": "A",
      "note": "Continue holding A to skip intro sequences"
    },
    {
      "action": "screenshot",
      "path": "./outputs/probe-02.png",
      "note": "Checkpoint 2"
    },
    {
      "action": "advance",
      "frames": 540,
      "button": "A",
      "note": "Continue holding A toward title"
    },
    {
      "action": "screenshot",
      "path": "./outputs/probe-03.png",
      "note": "Checkpoint 3"
    },
    {
      "action": "advance",
      "frames": 660,
      "button": "A",
      "note": "Final skip window before START attempt"
    },
    {
      "action": "screenshot",
      "path": "./outputs/probe-04-before-start.png",
      "note": "Checkpoint before START"
    },
    {
      "action": "tap",
      "button": "START",
      "frames": 1,
      "afterFrames": 180,
      "note": "Attempt to pass title prompt"
    },
    {
      "action": "screenshot",
      "path": "./outputs/probe-05-after-start.png",
      "note": "Result after START"
    }
  ]
}
